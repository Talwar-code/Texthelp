<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleDisplayName</key>
    <string>TextHelp Share Extension</string>
    <key>CFBundleIdentifier</key>
    <!-- Replace com.example.texthelp with your app's bundle identifier -->
    <string>com.example.texthelp.ShareExtension</string>
    <key>CFBundlePackageType</key>
    <string>XPC!</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0</string>
    <key>CFBundleVersion</key>
    <string>1</string>
    <key>NSExtension</key>
    <dict>
        <key>NSExtensionAttributes</key>
        <dict>
            <!-- Show the extension when the user shares plain text or supported files.
                 We support plain text, JSON, and simple text files exported by chat apps
                 (including .txt and .json).  The share sheet will also present
                 this extension when a user shares a single file with one of
                 these extensions. -->
            <key>NSExtensionActivationRule</key>
            <dict>
                <key>NSExtensionActivationSupportsText</key>
                <true/>
                <key>NSExtensionActivationSupportsFileWithMaxCount</key>
                <integer>1</integer>
                <key>NSExtensionActivationSupportsFileWithExtension</key>
                <array>
                    <string>txt</string>
                    <string>text</string>
                    <string>json</string>
                    <string>zip</string>
                </array>
            </dict>
        </dict>
        <!-- Identifies this extension as a Share Extension -->
        <key>NSExtensionPointIdentifier</key>
        <string>com.apple.share-services</string>
        <!-- Specifies the class that implements the extension's main logic -->
        <key>NSExtensionPrincipalClass</key>
        <string>$(PRODUCT_MODULE_NAME).ShareViewController</string>
    </dict>
</dict>
</plist>